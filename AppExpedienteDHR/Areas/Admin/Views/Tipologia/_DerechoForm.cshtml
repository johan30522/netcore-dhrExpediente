@using AppExpedienteDHR.Core.ViewModels.Admin
@model DerechoViewModel

<div id="modalDerecho" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="Derecho" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Derecho</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="derechoForm" method="post" asp-action="SaveDerecho">
                    <input type="hidden" asp-for="Id"/>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Codigo" class="form-label"></label>
                        <input asp-for="Codigo" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Codigo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Descripcion" class="form-label"></label>
                        <input asp-for="Descripcion" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="saveDerecho()">Guardar</button>
            </div>
        </div>
    </div>
</div>