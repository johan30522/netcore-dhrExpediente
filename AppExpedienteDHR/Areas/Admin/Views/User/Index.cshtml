@{
    ViewData["Title"] = "Lista de Usuarios";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Usuarios</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp;
                Crear
            </a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblUsers" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Usuario</th>
                <th>Correo</th>
                <th>Nombre</th>
                <th>Dirección</th>
                <th>Teléfono</th>
                <th>Puesto</th>
                <th>Roles</th>
                <th>Acciones</th>
            </tr>
        </thead>

    </table>

</div>

@section Scripts {
    <script src="~/js/datatable/user.js"></script>
}

