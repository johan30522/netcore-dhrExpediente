
@model int

@{
    var requestType = ViewData["requestType"] as string;
}


<!-- Modal para seleccionar la acción -->
<div class="modal fade" id="modalSeleccionarAccion" tabindex="-1" aria-labelledby="modalSeleccionarAccionLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalSeleccionarAccionLabel">Seleccionar Acción</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formSeleccionarAccion">
                    <div class="form-group">
                        <label for="actionSelect">Acción</label>
                        <select class="form-control" id="actionSelect" required>
                            <option value="">Cargando acciones...</option>
                        </select>
                    </div>
                    <div class="form-group mt-3">
                        <label for="actionComments">Comentarios</label>
                        <textarea class="form-control" id="actionComments" rows="3" placeholder="Comentarios" required></textarea>
                    </div>
                </form>
                <!-- Spinner de procesamiento dentro del modal (oculto por defecto) -->
                <div id="processingSpinner" class="d-none text-center mt-3">
                    <span class="spinner-border text-primary" role="status" aria-hidden="true"></span>
                    <span>Procesando, por favor espera...</span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Cancelar
                </button>
                <button type="button" class="btn btn-primary" id="btnContinuar" onclick="guardarYProcesarAccion(@Model, '@requestType')">
                    <i class="fas fa-cogs"></i> Continuar
                </button>
            </div>
        </div>
    </div>
</div>